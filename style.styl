@charset "utf-8"

/**section_title 継承**/
.section_title()
    display flex
    justify-content flex-end
    align-items center

    font-family "Airbnb Cereal App"
    font-weight bold
    font-size 16px
    letter-spacing 0.08em
    line-height 20px
    color: #15181b

.section_title:before
    border-top 1px solid
    content ""
    width 120px
    margin-right 16px

/*btn 継承*/
.section_btn
    display flex
    width 320px
    height 56px
    border solid 2px #FF585E
    box-shadow 4px 4px #35BEED
    line-height 56px

.btn_font
    font-family "Noto Sans CJK JP"
    font-weight bold
    font-size 14px
    letter-spacing 0.08em
    line-height 56px
    color #15181b 

.btn_next
    width 8px
    height 8px
    border-top solid 1px #15181B
    border-right solid 1px #15181B
    transform-origin left top
    transform rotate(45deg) 

/*headline 継承*/
.headline_font
    font-family "Airbnb Cereal App"
    font-weight bold
    font-size 32px
    line-height 40px
    text-align left
    color #15181b

*
  margin 0
  padding 0

/*header*/
.header
    display flex
    width 1280px 
    height 80px

.menu
    width 24px
    height 22px
    margin 30px 0 0 30px

.title
    width 160px
    height 34.59px
    margin 23px 0 0 506px

ul.sns
    display inline-flex
    width 114px
    height 20px
    justify-content space-between
    margin 30px 0 0 422px

ul.sns li
    display inline

.header_menubar
    border-top solid 1px #e3e3e3

ul.home_menubar
    display flex
    width 507px
    height 48px
    justify-content: space-between
    margin-left 377px

ul.home_menubar li
    display inline
    font-family "Noto Sans CJK JP"
    font-weight 500
    font-size 14px
    line-height 48px
    color #15181b

    &:first-child
      font-family  "Airbnb Cereal App"
      font-weight  bold
      font-size  12px
      color #888


/*top*/
.top
    display  flex
    width 1280px
    height 498px

.top_left
    width 920px
    height 498px

.top_right
    width 360px
    height 498px

.top_right_sub
    width 360px
